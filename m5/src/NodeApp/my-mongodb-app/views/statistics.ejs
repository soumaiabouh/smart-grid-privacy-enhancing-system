	<script>
            // Check if the authentication token exists in Local Storage
            const storedToken = localStorage.getItem("authToken");

            if (!storedToken) {
                // Redirect to the login page if the token is missing
                window.location.href = "login.html"; // Replace with your login page URL
            } else {
                // Validate the token on the server side (not shown here)
                // If valid, proceed with displaying protected content
                // Otherwise, redirect to the login page
            }
            const tableBody = document.getElementById('tableBody');
            const smartMeterTab = document.getElementById('smartMeter-tab');
            const statisticsTab = document.getElementById('statistics-tab');

            
            
            smartMeterTab.addEventListener('click', () => {
                window.location.href = "smartMeters";
            });


            
            document.getElementById('apartmentNums').addEventListener('change', function () {
            const selectedOption = this.value; // Get the selected value

            // Make an AJAX request to your server
            fetch('/process', {
                method: 'POST',
                body: JSON.stringify({ option: selectedOption }), // Send data to server
                headers: {
                    'Content-Type': 'application/json',
                },
            })
                .then(response => response.text())
                .then(html => {
                // Update the tab content with the new HTML
                document.getElementById('result').innerHTML = html;
            })
                .catch(error => {
                    console.error('Error:', error);
                });
        });

        const queryString = window.location.search;

        
        const params = new URLSearchParams(queryString);
        const valueFromFirstPage = params.get("param1");
        if(valueFromFirstPage != null)
        {
        const intValue = Number(valueFromFirstPage);

        let element = document.getElementById('apartmentNums');
